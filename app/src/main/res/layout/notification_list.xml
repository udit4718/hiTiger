<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_background_with_border"
    android:orientation="horizontal"
    android:padding="14dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_profile_default_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thushar Tharur"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/large"/>

        <TextView
            android:id="@+id/requested_to_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requested you to play"
            android:textColor="@color/textColorGrey"
            android:textSize="@dimen/medium"/>

        <TextView
            android:id="@+id/number_of_days_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="1 day ago"
            android:textColor="@color/lightGrey"
            android:textSize="@dimen/small"/>
    </LinearLayout>

</LinearLayout>
</FrameLayout>