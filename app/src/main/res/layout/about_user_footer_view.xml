<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp">

    <RelativeLayout
        android:id="@+id/add_more_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_more_curve_background"
        android:padding="7dp">

        <ImageView
            android:id="@+id/add_more_category_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add1"/>

        <TextView
            android:id="@+id/add_more_category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/add_more_category_image"
            android:text="@string/add_more_category"
            android:textSize="@dimen/medium"/>
    </RelativeLayout>
</RelativeLayout>